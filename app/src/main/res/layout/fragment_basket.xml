<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketFragment">

    <TextView
        android:id="@+id/titleBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Basket"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:fontFamily="@font/poppinssemibold"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSearch"
        android:layout_below="@id/titleBasket"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="50.9dp"
        android:layout_marginTop="10dp"
        android:elevation="8dp"
        app:cardCornerRadius="7.61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iconifiedByDefault="false"
            app:queryHint="Search History..."
            android:background="@color/blue"
            />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvSearch"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp">

        <LinearLayout
